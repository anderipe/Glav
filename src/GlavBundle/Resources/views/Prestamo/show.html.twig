{% extends 'GlavBundle::layoutAdmin.html.twig' %}

{% block infoUserTop %}
    <h1>Prestamo Registrado</h1>

          <table class="table table-bordered table-striped table-condensed">


        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ entity.valor }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ entity.observacion }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('prestamo') }}">
            Volver a la Lista
        </a>
    </li>
    <li>
        <a href="{{ path('prestamo_edit', { 'id': entity.id }) }}">
            Editar Registro Prestamo
        </a>
    </li>
    <li>{{ form(delete_form, {'attr': {'onclick': 'return confirm("Desea Eliminar el registro ?")'}}) }}</li>
</ul>
{% endblock %}

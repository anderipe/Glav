{% extends 'GlavBundle::layoutAdmin.html.twig' %}

{% block infoUserTop %}
    <h1>Lista de Empleados</h1>
    
 <ul>
        <li>
            <a href="{{ path('empleado_new') }}">
                Crear Empleado
            </a>
            
            <p> </p>
            <p> </p>
  <table class="table table-striped table-bordered bootstrap-datatable datatable">

        <thead>
            <tr>
                <th>Identificacion</th>
                <th>Nombre</th>
                
                <th>Fnacimiento</th>
               
                <th>Telefono</th>
                
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.identificacion }}</td>
                <td>{{ entity.nombre }} {{ entity.apellido }}</td>
                
                <td>{% if entity.fNacimiento %}{{ entity.fNacimiento|date('Y-m-d') }}{% endif %}</td>
                
                <td>{{ entity.telefono }}</td>
                
                <td>{{ entity.email }}</td>
                <td>
               <ul>
                <a class="btn btn-success" href="{{ path('empleado_show', { 'id': entity.id }) }}">
                <i class="halflings-icon white zoom-in"></i>  
                </a>
                <a class="btn btn-info" href="{{ path('empleado_edit', { 'id': entity.id }) }}">
                <i class="halflings-icon white edit"></i>  
                </a>
               
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('empleado_new') }}">
                Crear Empleado
            </a>
        </li>
    </ul>
    {% endblock %}
